<Window x:Class="ScheduleMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleMaker"
        mc:Ignorable="d"
        Title="MainWindow">
    <DockPanel>
        <Menu DockPanel.Dock ="Top" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справочник"></MenuItem>
            <MenuItem Header="Добавить группу" Click="MenuItem_Click_1"></MenuItem>
        </Menu>
        <ScrollViewer>
            <DockPanel Name="ScheduleDockPanel" HorizontalAlignment="Left">
            </DockPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
