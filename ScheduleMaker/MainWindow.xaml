<Window x:Class="ScheduleMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleMaker"
        Title="MainWindow">
    <DockPanel>
        <Menu DockPanel.Dock ="Top" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справочник">
                <MenuItem Name="RoomsMenuItem" Header="Аудитории" Click="RoomsMenuItem_Click"></MenuItem>
                <MenuItem Header="Преподаватели"></MenuItem>
                <MenuItem Header="Расписание звонков"></MenuItem>
            </MenuItem>
            <MenuItem Header="Расписание">
                <MenuItem Header="Добавить группу"></MenuItem>
                <MenuItem Header="Добавить пару"></MenuItem>
            </MenuItem>
            
        </Menu>
        <ScrollViewer>
            <!-- <DockPanel Name="ScheduleDockPanel" HorizontalAlignment="Left"> -->
            <!-- </DockPanel> -->
            <Canvas Name="ScheduleCanvas">

            </Canvas>
        </ScrollViewer>
    </DockPanel>
</Window>

